<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/add_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Bread" />

    <Button
        android:id="@+id/add_milk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Milk"
        app:layout_constraintTop_toBottomOf="@+id/add_item"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/add_meat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Meat"
        app:layout_constraintTop_toBottomOf="@+id/add_milk"
        tools:layout_editor_absoluteX="-25dp" />

    <Button
        android:id="@+id/add_juice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Juice"
        app:layout_constraintTop_toBottomOf="@+id/add_meat"
        tools:layout_editor_absoluteX="-16dp" />

    <ListView
        android:id="@+id/list_item"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_juice" />

</androidx.constraintlayout.widget.ConstraintLayout>